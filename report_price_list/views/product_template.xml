<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model='ir.ui.view' id='product_template_form_view'>
            <field name='name'>product_template_structure_gebesaform_view</field>
            <field name='model'>product.template</field>
            <field name='inherit_id' ref="product.product_template_form_view"/>
            <field name='arch' type='xml'>
                <xpath expr="//notebook/page[4]" position="after">
                    <page string="Isometric">
                        <group>
                           <field name='pricelist'/>
                           <field name='note_pricelist'/>
                           <field name='isometric' widget='image'/>
                           <field name='isometric_medium' widget='image' class='oe_avatar'/>
                           <field name='isometric_small' widget='image'/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>