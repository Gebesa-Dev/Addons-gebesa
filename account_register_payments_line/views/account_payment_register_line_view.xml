<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_invoices_topay_tree" model="ir.ui.view">
            <field name="name">account.register.payments.wizard.inherit</field>
            <field name="model">account.register.payments</field>
            <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
            <field name="arch" type="xml">
            	<form position='inside'>
	        		<notebook>
						<page string="Invoices">
							<field name="line_ids">
	                            <tree string="Invoices to pay" editable="top" create="false" decoration-danger="amount &gt; amount_unreconciled or amount &lt; 0">
	                                <field name="move_line_id" readonly="1"/>
	                                <field name="name" readonly="1"/>
	                                <field name="origin" readonly="1"/>
	                                <field name="reference" readonly="1"/>
	                                <field name="date_original" readonly="1"/>
	                                <field name="date_due" readonly="1"/>
	                                <field name="amount_original" readonly="1"/>
	                                <field name="amount_unreconciled" readonly="1"/>
	                                <field name="reconcile"/>
	                                <field name="amount"  sum="Total to pay"/>
	                            </tree>
	                        </field>
						</page>
					</notebook>
				</form>
            </field>
        </record>

        <record id="view_payment_invoices" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
            	<sheet position='inside'>
	        		<notebook>
						<page string="Invoices">
							<field name="register_line_ids" readonly="1">
	                            <tree string="Invoices payed">
	                                <field name="move_line_id" readonly="1"/>
	                                <field name="name" readonly="1"/>
	                                <field name="origin" readonly="1"/>
	                                <field name="reference" readonly="1"/>
	                                <field name="date_original" readonly="1"/>
	                                <field name="date_due" readonly="1"/>
	                                <field name="amount_original" readonly="1"/>
	                                <field name="amount_unreconciled" readonly="1"/>
	                                <field name="reconcile" readonly="1"/>
	                                <field name="amount" readonly="1" sum="Total to pay"/>
	                            </tree>
	                        </field>
						</page>
					</notebook>
				</sheet>
            </field>
        </record>
    </data>
</openerp>