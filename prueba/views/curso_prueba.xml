<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="course_prueba_form_view">
            <field name="name">course.form</field>
            <field name="model">curso.prueba</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <header>
                        <button name= "button_course_stauts" string="Cursos terminados" type="object" class="oe_highlight" groups="prueba.group_status_course_button_gebesa" style="background-color:purple" />
                     </header>
                    <sheet>
                        <group>
                            <field name="name"/>  
                             <field name="responsible_id"/>
                             <field name='status_course' readonly="True"/>Â 
                        </group>
                         <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="course_prueba_list_action">
            <field name="name">Course</field>
            <field name="res_model">curso.prueba</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_courses': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first course
                </p>
            </field>
        </record>
        <menuitem id="main_prueba_menu" name="Prueba"/>
        <menuitem id="prueba_menu" name="Prueba"
                  parent="main_prueba_menu"/>
        <menuitem id="courses_menu" name="Courses" parent="prueba_menu"
                  action="course_prueba_list_action"/>
<!--                   comienza sesiones -->

        <record model="ir.ui.view" id="session_prueba_form_view">
            <field name="name">session.form</field>
            <field name="model">session.prueba</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <header>
                        <button name= "button_session_status" string="Sessiones terminadas" type="object" class="oe_highlight" groups="prueba.group_status_course_button_gebesa" style="background-color:blue" />
                     </header>
                    <sheet>
                        <group string="Programar Sesion">
                             <field name="course_id"/>
                             <field name="name"/>
                             <field name="start_date"/>
                             <field name="duration"/>
                             <field name="seats"/>
                             <field name="active"/>
                             <field name="sessions_taken" widget="progressbar"/>
                             <field name='status_session' readonly="True"/>
                        </group>
                             <label for="attendee_ids"/>
                             <field name="attendee_ids"/>
                    </sheet>
                </form>
            </field>
        </record>
                 <record model="ir.ui.view" id="view_session_kanban">
            <field name="name">prueba.session.kanbann</field>
            <field name="model">session.prueba</field>
            <field name="arch" type="xml">
                <kanban default_group_by="course_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                 t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                <div t-attf-class="oe_kanban_content">
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    Duration:
                                    <field name="duration"/>
                                    <br/>
                                    Estatus_
                                    <field name='status_session'/>
                                </div>
                                </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.actions.act_window" id="session_prueba_list_action">
            <field name="name">Session</field>
            <field name="res_model">session.prueba</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context" eval="{'search_default_my_courses': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first session
                </p>
            </field>
        </record>
        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.tree</field>
            <field name="model">session.prueba</field>
            <field name="arch" type="xml">
               <tree string="Session Tree" decoration-primary="duration&lt;5" decoration-danger="duration&gt;15">
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name='status_session' readonly="True"/>
                    <field name="duration"/>
                    <field name="sessions_taken" widget="progressbar"/>
                </tree>
            </field>
        </record>
        <menuitem id="main_prueba_menu" name="Prueba"/>
        <menuitem id="prueba_menu" name="Prueba"
                  parent="main_prueba_menu"/>
        <menuitem id="session_menu" name="Session" parent="prueba_menu"
                  action="session_prueba_list_action"/>
    </data>
</openerp>