<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model='ir.ui.view' id='hr_view_employee_form_course'>
            <field name='name'>hr.view.employee.course</field>
            <field name='model'>hr.employee</field>
            <field name='inherit_id' ref='hr.view_employee_form'/>
            <field name='arch' type='xml'>
            <xpath expr="//field[@name='bank_account_id']" position="after">
                <field name="name_course"/> 
            </xpath>   
            </field>
        </record> 
        <record model="ir.ui.view" id="hr_view_employee_course_kanban">
            <field name="name">hr.employee.course.kanban</field>
            <field name="model">hr.employee</field>
            <field name='inherit_id' ref='hr.hr_kanban_view_employees'/>
            <field name='arch' type='xml'>
            <xpath expr="//field[@name='mobile_phone']" position="after">
              <li t-if="record.name_course.raw_value"><field name="name_course"/></li>
            </xpath>   
            </field>
        </record> 
        <record model='ir.ui.view' id='hr_view_employee_form_course_tree'>
            <field name='name'>hr_view_employee_tree</field>
            <field name='model'>hr.employee</field>
            <field name='inherit_id' ref='hr.view_employee_tree'/>
            <field name='arch' type='xml'>
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="name_course" readonly="1"/> 
            </xpath>   
            </field>
        </record> 
    </data>
</openerp>
